<section id="decorate-section">
    <h1 class="item">{{room.name}} - Details</h1>
    <main class="layout right large">
        <div class="col">
            <img src='{{room.imgURL}}' alt='room picture' class="img-large" />
        </div>

        <div class="content pad-med">
            <p>Facilities:</p>

            <form action="/facility/{{room._id}}/decorateRoom" method="post">
                <ul class="catalog">
                    {{#each facilities}}
                    <li>
                        <label>
                            <input type="checkbox" name="{{_id}}" {{#if checked}}checked{{/if}}>
                            {{label}} <img class="facility-icon" src="{{iconUrl}}">
                        </label>
                    </li>
                    {{/each}}
                </ul>
                <button class="action cta">Confirm Facilities</button>
            </form>
        </div>
    </main>
</section>