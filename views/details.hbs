<section id='catalog-section'>
  {{#with room}}
  <h1 class='item'>{{name}} - Details</h1>

  <div class='item padded'>
    <main class='layout right large'>
      <div class='col'>
        <img src='{{imgURL}}' alt='room picture' class='img-large' />
      </div>

      <div class='content pad-med'>
        <p>City: {{city}}</p>
        <p>{{description}}</p>

        <div class='align-center'>
          <div>
            Price per night for 2 persons: ${{price}}
          </div>

          <a class="action cta" href="/facility/{{_id}}/decorateRoom">Edit Facilities</a>
        </div>
      </div>
    </main>

    <footer>Listed by (TODO add owner)</footer>
  </div>
  {{/with}}
</section>